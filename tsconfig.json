{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "lib",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "types": [
            "vite/client",
            "@nuxt/schema",
            "@types/node",
            "@types/shelljs"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
    "exclude": [
        "dist",
        "lib",
        "package",
        "node_modules"
    ],
    "ts-node": {
        "transpileOnly": true,
        "files": true,
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}
